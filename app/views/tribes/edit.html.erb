<% provide(:title, "Start a tribe")%>
<h2>Edit Tribe</h2>


<%= form_for(@tribe, :html => { :multipart =>true }) do |f| %>

<%= link_to "Delete", @tribe, method: :delete,
							confirm: "Are you sure you want to delete this bid and all associated files?", 
							title: @tribe.name %>



<div class="container well">
	<div class="row">	
			<div class="span5">
				<%= f.label :name %><br>
				<%= f.text_field :name %>
				<% if @tribe.image? %>
				<%= image_tag(@tribe.image_url(:large).to_s, :class => "thumbnail" ) %>
				<hr>
			  	<%= f.label :image, "Tribe Profile Picture" %><br>
				<%= f.file_field :image %>
				<% else %>
			  	<%= f.label :image, "Tribe Profile Picture" %><br>				
				<%= f.file_field :image %>
				<% end %>
			</div>
			<div class="span7">
				<div class="span3">
			  	<%= f.label :owner_id, "Chief" %><br>
				<%= f.select :owner_id, @tribemembers %>			

				</div>
				<div class="span3" style="float:right; text-align:right">
				<%= f.submit "Update Tribe", class: "btn btn-large btn-primary", :id => "submitbtn" %>
				</div>
			</div>	
			<div class="span7">			
				<hr>

				<table class="table table-striped" id="members">
					<thead>	
					  <tr>
						<th>Member</th>
						<th>Joined Tribe</th>
						<th>Satus</th>												
					  </tr>
					</thead>
						<tbody>
							<% for user in @tribe.users %>
							<% if user.id == @tribe.owner_id %>
							<% else %>
							<tr>
								<td style="vertical-align:middle">
									<% if user.image? %>
										<row><%= image_tag user.image_url(:tiny).to_s %> <span style="font-size:18px"><%= user.combined_name %></span></row>
									<% else %>
										<row><%= image_tag '/assets/blank_user.png' %> <span style="font-size:18px"><%= user.combined_name %></span></row>
									<% end %>
								</td>
								<% for membership in user.memberships %>
									<td style="vertical-align:middle"><%= membership.created_at.strftime("%m/%d/%Y") %></td>
									<td style="vertical-align:middle">
										  <row><%= form_for(membership, :html => { :multipart =>true }) do |f| %>
										    <%= f.select(:status, ['approved','pending','rejected'],{}, :style => "width:125px !important; margin-bottom:0px;height:30px !important" ) %>
											<%= f.submit "Update", class: "btn btn-mini btn-success", :style => "margin:0px !important;font-size:14px !important; height:30px !important", :id => "submitbtn" %>
										  <% end %>	
											</row>
										</td>
								<% end %>		
							</tr>
							<% end %>
							<% end %>	
						</tbody>		
				</table>
		
			</div>	
	</div>			
</div>

<% end %>